@model IEnumerable<Tourist_Place.Models.Entity.Place>

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<form asp-action="Index" method="get" asp-route-id="SearchList">
    <div class="form-actions no-color">
        <p>
            <input asp-route-id="SearchInput" type="text" name="SearchString" placeholder="Find by name " value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" />
            <a asp-action="Index" class="btn btn-success">Back to Tourist Place List</a>
        </p>
    </div>
</form>

<table class="table table-active table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                    @Html.DisplayNameFor(model => model.PlaceName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewData["RatingSortParm"]">
                    @Html.DisplayNameFor(model => model.Rating)
               </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                    <img src="@Url.Content(item.Picture)" class="img-thumbnail img-fluid img-resize"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@i" type="button" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@i" type="button" class="btn btn-success">Details</a>
                <a asp-action="Delete" asp-route-id="@i" type="button" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        i++;
}
    </tbody>
</table>

<p>
    <a asp-action="Create" type="button" class="btn btn-warning btn-lg"> Add New Tourist Place </a>
</p>

@section Scripts
{
    <script type="text/javascript">
        //$('#SearchInput').change(function(){
        //    $(this).closest('SearchList').submit();
        //});
            $(function () {
                $("#SearchInput").live("change keyup", function () {
                    $("#SearchList").submit();
                });
            });
    </script>
}